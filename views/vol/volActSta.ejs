<%- include ../header %>
    
    <div class="right_content">            
        
    <h2><%= menu.title %></h2>   

    <%- include ../tips %>
     
         <div class="form">
         <form action="#" method="post" class="niceform">


                    <% if(row['Vol_Sta'] == 2){ %>

                        <div class="centerbar_box">
                        <div class="centerbar_box_top"></div>
                        <div class="centerbar_box_content">
                        <h4><a href="/vol/volActRep?vol_act_id=<%= row['Vol_Act_Id'] %>"><%= row['Title'] %></a></h4>
                        
                        <ul>
                            <li>开始时间：<strong><%= row['Start_Time'] %></strong></li>
                            <li>结束时间：<strong><%= row['End_Time'] %></strong></li>
                            <li>地点：<strong><%= row['Place'] %></strong></li>
                            <li>要求：<strong><%= row['Vol_Rsct'] %></strong></li>
                        </ul> 
                        </div>
                        <div class="centerbar_box_bottom"></div>
                    </div>


                        <div class="centerbar_box">
                            <div class="centerbar_box_top"></div>
                            <div class="centerbar_box_content">
                            <h3>提示</h3>
                            <img src="/images/in/images/info.png" alt="" title="" class="centerbar_icon_right" />
                            <p>
                                请根据活动时间地点及时前往参加志愿者活动，并在个人中心打印二维码作为入场凭据。
                            </p>
                            </div>
                            <div class="centerbar_box_bottom"></div>
                        </div> 
                    <% } %>

                    <% if(row['Vol_Sta'] == 4){ %>
                        <div class="centerbar_box">
                            <div class="centerbar_box_top"></div>
                            <div class="centerbar_box_content">
                            <h4>拒绝原因</h4>
                            <img src="/images/in/images/notice.png" alt="" title="" class="centerbar_icon_right" />
                            <p>
                                <%= row['Vol_Msg'] %>
                            </p>
                            </div>
                            <div class="centerbar_box_bottom"></div>
                        </div>

                    <% } %>
                    
                
         </form>
         </div>  
      
     
     </div><!-- end of right content-->
            
<%- include ../footer %>
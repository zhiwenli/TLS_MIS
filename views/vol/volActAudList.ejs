<% include ../header %>
<div class="right_content">            

    <h2><%= menu.title %></h2>
    <%- include ../tips %>
    
    <table id="rounded-corner" summary="2007 Major IT Companies' Profit">
        <thead>
         <tr>
             <th scope="col" class="rounded-company">ID</th>
             <th scope="col" class="rounded">姓名</th>
             <th scope="col" class="rounded">电话</th>
             <th scope="col" class="rounded">邮箱</th>
             <th scope="col" class="rounded">审核状态</th>
             <th scope="col" class="rounded-q4">详情/操作</th>
         </tr>
     </thead>
     <tfoot>
         <tr>
             <!-- <td colspan="6" class="rounded-foot-left"><em> </em></td>
             <td class="rounded-foot-right">&nbsp;</td> -->
         </tr>
     </tfoot>

     <tbody>

        <% for(var i = 0; i < rows.length; i++) { %>
         <tr>
            <td><%= rows[i]["User_Id"] %></td>
            <td><%= rows[i]["Name"] %></td>
            <td><%= rows[i]["Mobile"] %></td>
            <td><%= rows[i]["Email"] %></td>
            <td>
                <% if(rows[i]["Vol_Sta"]==2) { %>
                <img src="/images/in/images/valid.png" alt="" title="已通过审核" border="0" height=16 width=16 />
                <% } else if(rows[i]["Vol_Sta"]==3) { %>
                <img src="/images/in/images/warning.png" alt="" title="待审核" border="0" height=16 width=16 />
                <% } else if(rows[i]["Vol_Sta"]==4) { %>
                <img src="/images/in/images/error.png" alt="" title="审核已拒绝" border="0" height=16 width=16 />
                <% } else { %>
                <%= "异常" %>
                <% } %>
            </td>

            <td>
                <a href="/vol/volActAud?vol_act_id=<%= rows[i]["Vol_Act_Id"] %>&user_id=<%= rows[i]["User_Id"] %>">
                <img src="/images/in/images/user_edit.png" alt="" title="" border="0" />
                </a>
            </td>

             <!-- <td><a href="#" class="ask"><img src="/images/in/images/trash.png" alt="" title="" border="0" /></a></td> -->
         </tr>
        <% } %>
   

     </tbody>
 </table>


<%- include ../header %>
    
    <div class="right_content">            
        
    <h2><%= menu.title %></h2>
    <%- include ../tips %>
     
         <div class="form">
         <form action="#" method="post" class="niceform">

            <dl>
                <p align="center"><% if(message) { %><font color='red'><%= message %></font><% } %></p>
            </dl>
                
         
                <fieldset>
                    <dl>
                        <dt><label for="download">下载合同:</label></dt>
                        <% if(contract){ %>
                        <dd><button type="button" onclick="downloadfile('<%= contract %>')">点击下载用户合同</button></dd>
                        <% }else{ %>
                        <dd><button type="button" disabled='disabled'>用户未上传合同扫描件</button></dd>
                        <% } %>
                    </dl>

                    <dl>
                        <dt><label for="contract_ex">邮寄信息:</label></dt>
                        <dd><textarea name="contract_ex" id="contract_ex" rows="5" cols="36" readonly="true" ><% if(row['Contract_Ex']){ %><%= row['Contract_Ex'] %><% }else{ %><%= "用户未提交邮寄信息" %><% } %></textarea></dd>
                    </dl>

                    <dl>
                        <dt></dt>
                        <dd></dd>
                    </dl>

                    <dl>
                        <dt><label for="aud_sug">审核意见:</label></dt>
                        <dd><textarea type="text" name="aud_sug" id="aud_sug" rows="5" cols="36" placeholder="若不通过，请填写审核意见"><% if(row) { %><%= row['Aud_Sug'] %><% } %></textarea></dd>
                    </dl>

                     <dl class="submit">
                        <input type="submit" name="operate" id="submit" value="通过" onClick="passcfm()" />
                        <input type="submit" name="operate" id="submit" value="不通过" onClick="stopcfm()" />
                        <input type="submit" name="operate" id="submit" value="返回" />
                     </dl>
                    
                </fieldset>
                
         </form>
         </div>  
      
     
     </div><!-- end of right content-->
            
<%- include ../footer %>
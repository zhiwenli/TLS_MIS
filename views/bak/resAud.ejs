                    
                    
<%- include header %>
    
    <div class="right_content">            
        
    <%- include ../tips %>
        
        <h2><%= menu.title %></h2>
     
         <div class="form">
         <form action="#" method="post" class="niceform">

                
         
                <fieldset>
                    <dl>
                        <dt><label for="sr_id">编号:</label></dt>
                        <input type="text" name="sr_id" id="sr_id" value="<% if(row) { %><%= row['SR_Id'] %><% } %>" placeholder="无需手动填写" readonly="true" /></dd>
                    </dl>

                    <dl>
                        <dt><label for="title">主题:</label></dt>
                        <dd><input type="text" name="title" id="title" size="54" maxlength="40" value="<% if(row) { %><%= row['SR_Title'] %><% } %>" readonly="true"/></dd>
                    </dl>

                    

                    <dl>
                        <dt><label for="place">地点:</label></dt>
                        <dd><input type="text" name="place" id="place" size="54" maxlength="100" value="<% if(row) { %><%= row['Place'] %><% } %>" readonly="true"/></dd>
                    </dl>

                    <dl>
                        <dt><label for="route">路线:</label></dt>
                        <dd><input type="text" name="route" id="route" size="54"  maxlength="100" value="<% if(row) { %><%= row['Route'] %><% } %>" readonly="true"/></dd>
                    </dl>

                    <dl>
                        <dt><label for="acmdt" >住宿方式:</label></dt>
                        <dd><input type="text" name="acmdt" id="acmdt" size="54"  maxlength="100" value="<% if(row) { %><%= row['Acmdt'] %><% } %>" readonly="true"/></dd>
                    </dl>

                    <dl>
                        <dt><label for="peop_count">人数:</label></dt>
                        <dd><input type="text" min="1" max="1000" step="1" name="peop_count" id="peop_count" size="54" value="<% if(row) { %><%= row['Peop_Count'] %><% }else{ %><%= '1' %><% } %>" readonly="true"/></dd>
                    </dl>

                    <!-- 注意调整格式为"2014-01-13" -->
                    <dl>
                        <dt><label for="start_time">开始日期:</label></dt>
                        <dd><input type="text" name="start_time" id="start_time" size="54" value="<% if(row) { %><%= row['Start_Time'] %><% } %>" placeholder="如：2015-12-12 9:00:00" readonly="true"/></dd>
                    </dl>

                    

                    <dl>
                        <dt><label for="end_time">结束日期:</label></dt>
                        <dd><input type="text" name="end_time" id="end_time" size="54" value="<% if(row) { %><%= row['End_Time'] %><% } %>" placeholder="如：2015-12-12 9:00:00" readonly="true"/></dd>
                    </dl>

                  

                    <dl>
                        <dt><label for="submit_time">成果提交日期:</label></dt>
                        <dd><input type="text" name="submit_time" id="submit_time" size="54" disable="false" value="<% if(row) { %><%= row['Submit_Time'] %><% } %>" placeholder="如：2015-12-12 9:00:00" readonly="true"/></dd>
                        <p><small>最迟何时提交本次任务产生的科研成果</small></p>
                    </dl>

                    <dl>
                        <dt><label for="spc_require">特殊需求:</label></dt>
                        <dd><textarea type="text" name="spc_require" id="spc_require" rows="5" cols="36" maxlength="100" readonly="true"><% if(row) { %><%= row['Spc_Require'] %><% } %></textarea></dd>
                    </dl>

                    <dl>
                        <dt></dt>
                        <dd></dd>
                    </dl>

                    <dl>
                        <dt><label for="aud_sug">审核意见:</label></dt>
                        <dd><textarea type="text" name="aud_sug" id="aud_sug" rows="5" cols="36" value="<% if(row) { %><%= row['Aud_Sug'] %><% } %>" placeholder="请填写审核意见" ></textarea></dd>
                    </dl>

                    <dl>
                    <p align="center"><% if(message) { %><font color='red'><%= message %></font><% } %></p>
                    </dl>



                     <dl class="submit">
                        <input type="submit" name="operate" id="submit" value="通过" onClick="passcfm()" />
                        <input type="submit" name="operate" id="submit" value="不通过" onClick="stopcfm()" />
                        <input type="submit" name="operate" id="submit" value="取消" />
                     </dl>
                    
                </fieldset>
                
         </form>
         </div>  
      
     
     </div><!-- end of right content-->
            
<%- include footer %>